// 搜索内容
main
  width 100%
  height 100%
  display -webkit-flex
  display flex
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  -o-transition all 0.3s
  transition all 0.3s
  opacity 0.88

  &:hover
    opacity 1

  // iframe部分
  .sContent
    width 100%
    margin 1% 8%
    border none
    border-radius 10px
    box-shadow 2px 2px 10px 20px rgba(0, 0, 0, 0.2)